@model Broadway.WebApp.Models.StudentModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @if (Model == null)
    {
        <div class="alert alert-danger">
            No record found
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-4">Name</div>
            <div class="col-lg-8">@Model.Name</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Address</div>
            <div class="col-lg-8">@Model.Address</div>
        </div>
    }
</div>


