@Html.Partial("_Modal")

@section scripts
{
    <script>
        $(".detailsbtn").on("click", function() {
            //console.log("some message");
            $("#DetailsModal").modal({show:true});
        });

        $(".editbtn").on("click", function () {
            //console.log("some message");
            $("#EditModal").modal({ show: true });
        });

        $(".deletebtn").on("click", function () {
            //console.log("some message");
            $("#DeleteModal").modal({ show: true });
        });
    </script>
}
