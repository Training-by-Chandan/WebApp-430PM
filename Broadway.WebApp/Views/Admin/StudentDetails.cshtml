@model IEnumerable<Broadway.WebApp.ViewModel.Admin.StudentDashboardViewModel>
@{
    ViewBag.Title = "StudentDetails";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card card-stats">
        <div class="card-header card-header-info card-header-icon">
            <div class="card-icon">
                <a href="~/admin/studentcreate">

                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <p class="card-category">Student</p>
            <h3 class="card-title">Student Details</h3>
        </div>
        <div class="card-body">

            @if (Model == null || Model.Count() == 0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Oops!</strong> no record found
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else
            {
                <div class="row">


                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            @Html.Partial("_person", item)
                        </div>
                    }
                </div>

